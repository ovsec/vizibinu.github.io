---
import Logo from "./Logo.astro"
import { Icon } from 'astro-icon'
import ThemeSwitch from "./ThemeSwitch.astro";
import ActiveElementMarker from "./ActiveElementMarker.astro";
import NavItem from "./NavItem.astro";
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
const activeColor = "white"; //"green-600";

---
<div class="block md:hidden p-4">
	<Logo />
</div>

<div class="fixed bottom-0 z-40 md:relative  w-full container max-w-7xl mx-auto bg-[#111] md:bg-transparent ">	
	<div class="relative flex items-center justify-between gap-4 p-4">
		<div class="hidden md:block"><Logo/></div>
		
		<div class="flex grow md:grow-0 md:w-auto  items-center">
	
		<div class="inline-flex gap-x-8 h-8 text-sm justify-between grow  transition-all  ">
			<NavItem  text="Home" path="/" isActive={pathname === "/"} /> 
			<NavItem  text="Blogs" path="/blogs" isActive={pathname.indexOf("/blogs") != -1} />
			<NavItem  text="Projects" path="/projects" isActive={pathname === "/projects"} />
			<NavItem icon="ic:baseline-search"  path="/search" isActive={pathname === "/search"} />
		</div>
		</div>
	</div>
</div>

