---
    const { image, title, description, tags, url } = Astro.props
---
<a href={url} class="group w-full rounded overflow-hidden shadow-sm shadow-[#222] hover:bg-[#222] " >
    {image && <img loading="lazy" class="w-full h-48 group-hover:scale-105" src={image.src} alt={image?.alt}>}
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2">{title}</div>
      <p class="text-[#ccc] text-sm">
        {description}
      </p>
    </div>
    <div class="px-6 pt-2 pb-2">
       
        {tags?.length > 0 && tags.map((tag) => (
            <span class="inline-block bg-[#222] rounded-full px-3 py-1 text-xs font-semibold text-green-500 mr-2 mb-2">#{tag}</span>
          ))}
      
      
    </div>
</a>