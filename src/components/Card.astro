---
    const { image, title, description, tags } = Astro.props
---
<a href="/blogs/sweden-foreign-population" class="group max-w-sm rounded overflow-hidden shadow-sm shadow-[#222] hover:bg-[#222] " >
    <img class="w-full h-48 group-hover:scale-105" src={image} alt="Sunset in the mountains">
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2">{title}</div>
      <p class="text-[#ccc] text-sm">
        {description}
      </p>
    </div>
    <div class="px-6 pt-2 pb-2">
       
        {tags.map((tag) => (
            <span class="inline-block bg-[#222] rounded-full px-3 py-1 text-xs font-semibold text-green-500 mr-2 mb-2">#{tag}</span>
          ))}
      
      
    </div>
</a>