---
    const { image, title, description, tags, url } = Astro.props
---
<article  class="relative group  rounded-md overflow-hidden  " >
    <a href={url} class=" relative w-full  h-48 overflow-hidden ">
    {image && <img loading="lazy" class="object-cover z-0 w-full h-48 group-hover:scale-105 transition-all overflow-hidden rounded-b-md" src={image.src} alt={image?.alt} />} 
    {!image && <div class="z-0 w-full h-48 bg-zinc-800"></div>}
    <div class="absolute top-0 group-hover:scale-110 transition-all bottom-0 w-full flex flex-col justify-end rounded-b-md  px-6 py-4 bg-gradient-to-t from-[#111] to-transparent">
      <div class="font-bold text-xl mb-2 tracking-tight truncate">{title}</div>
      <p class="text-[#ccc] text-sm font-normal leading-normal opacity-75 line-clamp-3">
        {description}
      </p>
      
    </div>
    </a>
    <div class="z-10 px-2 pt-2 pb-2 ">
      {tags?.length > 0 && tags.map((tag) => (
          <a href={`#${tag}`} class="group inline-block bg-zinc-200 dark:bg-[#222] rounded-full px-3 py-1 text-xs font-semibold text-green-500 mr-2 mb-2">#{tag}</a>
        ))}
     </div> 
  </article>