---
import Avatar from "@components/Avatar.astro";
import BlogList from "@components/blogs/BlogList.astro";
import MySiteLayout from "@layouts/MySiteLayout.astro"

const {title, description, keywords, author, relatedBlogs, date} = Astro.props;
---

<MySiteLayout title={title} keywords={keywords} description={description} author={author}>
    <div class="grid grid-cols-1 md:grid-cols-[auto_300px] gap-4">
        <div>
            <slot name="header" />
            <div class="prose  md:prose-md prose-zinc dark:prose-invert">
                <slot />
            </div>
        </div>
        <div class="my-10 md:my-0">
            <h2 class="font-medium underline underline-offset-3">Related blogs</h2>
            <BlogList blogs={relatedBlogs}  />
        </div>
        
    </div>
</MySiteLayout>
